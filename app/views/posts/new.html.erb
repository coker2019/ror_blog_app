<div>
  <h2>Create a post</h2>

  <%= form_with model: @post, url: user_posts_path(@user) do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title, required: true %>
    </div>

    <div>
      <%= form.label :text %>
      <%= form.text_field :text, required: true %>
    </div>

    <div>
      <%= form.submit "Submit" %>
    </div>
  <% end %>

</div>